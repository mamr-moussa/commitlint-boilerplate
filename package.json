{
  "name": "commitlint-boilerplate",
  "version": "3.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "release": "standard-version",
    "lint": "eslint *.js",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mamr-moussa/commitlint-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mamr-moussa/commitlint-boilerplate/issues"
  },
  "homepage": "https://github.com/mamr-moussa/commitlint-boilerplate#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/travis-cli": "^11.0.0",
    "eslint": "^7.15.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "standard-version": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  }
}
